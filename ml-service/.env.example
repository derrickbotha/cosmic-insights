# ML Service Environment Variables

# Django
DJANGO_SECRET_KEY=change-this-secret-key-in-production-12345
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,ml-service

# Database - PostgreSQL for structured data
DATABASE_URL=postgresql://mluser:mlpassword@postgres-ml:5432/cosmic_ml

# MongoDB - Existing MongoDB for raw text storage
MONGO_URI=mongodb://mongo:27017/cosmic_insights
MONGO_DB_NAME=cosmic_insights

# Qdrant - Vector database
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# MinIO - Object storage
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_DATASETS=datasets
MINIO_BUCKET_CHECKPOINTS=checkpoints
MINIO_BUCKET_UPLOADS=uploads
MINIO_USE_SSL=False

# Redis - Celery broker
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ML Models
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
MAX_SEQUENCE_LENGTH=512

# Existing Express API
EXPRESS_API_URL=http://cosmic-backend:5000
EXPRESS_API_KEY=shared-secret-key-123

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Celery
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=True

# Logging
LOG_LEVEL=INFO
