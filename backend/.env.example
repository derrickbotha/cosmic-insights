# Environment Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/cosmic_insights
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cosmic_insights?retryWrites=true&w=majority

# JWT Secrets (Generate strong random strings for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# CSRF Secret
CSRF_SECRET=your-csrf-secret-key-change-this-in-production

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Cookie Settings
COOKIE_SECRET=your-cookie-secret-key-change-this-in-production

# CORS
CORS_ORIGIN=http://localhost:3000
# For production, use your frontend domain:
# CORS_ORIGIN=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (for session store and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Braintree
BRAINTREE_MERCHANT_ID=your_merchant_id
BRAINTREE_PUBLIC_KEY=your_public_key
BRAINTREE_PRIVATE_KEY=your_private_key
BRAINTREE_ENVIRONMENT=sandbox
# For production: BRAINTREE_ENVIRONMENT=production

# Email (Nodemailer - using Gmail as example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@cosmicinsights.com

# SendGrid (alternative email service)
# SENDGRID_API_KEY=your_sendgrid_api_key

# Logging
LOG_LEVEL=info
# Options: error, warn, info, http, debug

# Client URL (for email links)
CLIENT_URL=http://localhost:3000

# Admin Emails (comma-separated)
ADMIN_EMAILS=admin@cosmicinsights.com

# File Upload
MAX_FILE_SIZE=5242880
# 5MB in bytes

# Analytics
ANALYTICS_RETENTION_DAYS=90

# Socket.IO
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# API Documentation
API_DOCS_ENABLED=true

# Sentry (Error Tracking - optional)
# SENTRY_DSN=your_sentry_dsn

# Google Analytics (optional)
# GA_TRACKING_ID=UA-XXXXX-Y
